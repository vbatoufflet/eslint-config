{
  "name": "@batou.dev/eslint-config",
  "version": "0.1.0",
  "description": "Reusable ESLint configuration with JavaScript and TypeScript support",
  "license": "MIT",
  "author": "Vincent Batoufflet <vincent@batou.dev>",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "build": "vite build && tsc --project tsconfig.build.json",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@types/bun": "latest",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-externalize-deps": "^0.9.0"
  },
  "peerDependencies": {
    "@eslint/compat": "^1.3.1",
    "@stylistic/eslint-plugin": "^5.2.2",
    "eslint": "^9.31.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "peerDependenciesMeta": {
    "@eslint/compat": {
      "optional": true
    },
    "@stylistic/eslint-plugin": {
      "optional": false
    },
    "eslint": {
      "optional": false
    },
    "eslint-plugin-perfectionist": {
      "optional": false
    },
    "typescript": {
      "optional": true
    },
    "typescript-eslint": {
      "optional": true
    }
  }
}
